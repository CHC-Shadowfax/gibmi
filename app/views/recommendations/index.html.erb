<h1>Find some gift ideas!</h1>
<div>
    <%= link_to generate_recommendations_path do %>
      <i class="fa-solid fa-rotate" style="color: #D0BDF4;"></i>
    <% end %>
<%= link_to 'chatGPT help me!', generate_recommendations_path %>
</div>
<div class="gifts-container">
  <% @recommendations.each do |r| %>
    <%= link_to recommendation_path(r) do %>
      <div class="gift">
          <%= image_tag r.image %>
        <% end %>
        <div class="card-container">
          <h5 class="card_title"><%= r.name %></h5>
        </div>
      </div>
  <% end %>

</div>
<%= paginate @recommendations %>
