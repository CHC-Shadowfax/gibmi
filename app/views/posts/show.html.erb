<%= image_tag @post.photo.url %>
<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<% if current_user.admin? %>
  <%= link_to "Edit post", edit_post_path(@post) %>
  <%= link_to "Delete post", @post, method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%end%>
<%= link_to "Go back to blog", posts_path(@post) %>
