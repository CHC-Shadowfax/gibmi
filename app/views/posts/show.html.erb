<%= image_tag @post.photo.url %>
<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<div>
  <div class="btn-row">
    <% if current_user.admin? %>
      <p><%= link_to "Edit post", edit_post_path(@post),  class:"btn btn-primary" %></p>
      <p><%= link_to "Delete post", @post, class:"btn btn-primary", method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
    <%end%>
  </div>
  <p><%= link_to "Go back to blog", posts_path(@post), class:"btn btn-primary" %></p>
</div>
