<div class= "list-container">
  <h1 class="list-name-container"> <%= @list.name %> </h1>
  <p><%= @list.event_date %></p>
  <p><%= @list.description %></p>
</div>

<div class= "actions-container">
 <%= link_to new_gift_path do %>
      <i class="fa-solid fa-circle-plus" style="color: #780078;"></i>
    <% end %>

  <%= link_to edit_list_path(@list) do  %>
      <i class="fa-regular fa-pen-to-square" style="color: #780078;"></i>
    <% end %>
  <% if current_user && @list.user_id == current_user.id %>
    <%= link_to(list_path(@list),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}) do %>
    <i class="fa-solid fa-trash" style="color: #780078;"></i>
    <% end %>
  <% end %>



</div>

<%= link_to "Add new gift", new_gift_path %>
<%= link_to "Edit gift", edit_gift_path %>

<div class="gifts-container">
  <% @list.gifts.each do |gift|%>
    <%= link_to gift do %>
        <div class="gift">
            <%=cl_image_tag gift.photo.key %>
        <div class="card-container">
            <h5 class="card_title"><%=gift.name%></h5>
            <p class="card_text"><%= gift.description %></p>
        </div>
        </div>
    <% end %>
  <% end %>
</div>
